<Window x:Class="WebhookLearning.SetURLWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebhookLearning"
        mc:Ignorable="d"
        Title="Set Webhook URL" Height="80" Width="800"
        ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="0,0,0,-9">
        <Label Content="Webhook URL:" HorizontalAlignment="Left" Margin="4" VerticalAlignment="Center"/>
        <TextBox x:Name="WebhookURL" HorizontalAlignment="Center" Height="23" Margin="4" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="602" TextAlignment="Left"/>
        <Button Content="Update" HorizontalAlignment="Right" Margin="4" VerticalAlignment="Center" Width="75" Click="UpdateWebhookURL"/>
    </Grid>
</Window>
